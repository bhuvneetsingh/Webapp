	Edit
</button>
<button onclick="window.location.href='http://localhost:50953/Home/delete';">
	Delete
</button>*@
<h3></h3>

<table class=" container table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.SongName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Singer)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
	<tr>
		
		<td>
			@Html.DisplayFor(modelItem => item.SongName)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Singer)
		</td>
		<td>
			@Html.ActionLink("Play", "GetSong", new { id = item.SongName }) |
			@Html.ActionLink("Edit", "Edit", new { id = item.SongName }) |
			@Html.ActionLink("Delete", "Delete", new { id = item.SongName })

			@*<button id=item.SongName onclick="playSong() "></button>*@
</tr>
	}

</table>
<button onclick="window.location.href='http://localhost:50953/Home/EndPage';">
	Logout
</button>

@section scripts{
	<script type="text/javascript">
		function playSong() {

			var audio = new Audio('http://localhost:50953/Home/GetSong');
			audio.play();

		}
		

	</script>
}