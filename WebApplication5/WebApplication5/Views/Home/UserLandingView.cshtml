@using System;
@using System.IO;
@model IEnumerable<MYapplication.Models.Song>

@{
	ViewBag.Title = "UserLandingView";
}
<div class="col-md-12">
	<img src="~/Content/Images/List.png" width="100%"height="260" title="Welcome" />
</div>
<h5>.</h5>
<button onclick="window.location.href='http://localhost:50953/Home/create';">
	Add
</button>
